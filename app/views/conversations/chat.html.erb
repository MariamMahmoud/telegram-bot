<h2 class="ui center aligned icon padded header">
  <i class="circular user secret icon"></i>
  Talk to you friendly OcttoBot
</h2>

<div class="ui two colum padded grid">
    <div class="four wide column">
        <div class="ui fuild raised card chatbox">
            <div class="content">
                <div class="ui inverted vertical pointing menu">
                    <a class="active item">
                        Conversation 1
                    </a>
                    <a class="item">
                        Conversation 2
                    </a>
                    <a class="item">
                        Conversation 3
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="twelve wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <div class="ui small feed">
                    <%= render @messages %>
                </div>
                <div class="extra content">
                    <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path, remote: true) do |f| %>
                        <div class="field">
                            <div class="ui fluid icon input">
                            <%= f.text_field :body, placeholder: "Give me a command..."%>
                                <%= f.button '<i class="bordered inverted blue icon edit"></i>'.html_safe %>
                            </div>
                        </div>
                    <% end %>
                </div>    
            </div>
            
        </div>
    </div>
</div>
